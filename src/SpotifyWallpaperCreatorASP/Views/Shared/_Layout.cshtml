<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["heading"].ToString()</title>


    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
</head>
<body>
    <div class="outer">
        <div class="inner">
            <div class="nav">
                <a class="home-link" href="@Url.Action("Index", "Home")">
                    <div class="home" title="Home">
                         <i class="fa fa-home fa-4x"></i>
                    </div>
                </a>
                <a class="spotify-link" href="@Url.Action("Index", "Creator")">
                     <div class="spotify" title="Spotify Wallpaper Creator">
                        <i class="fa fa-spotify fa-4x"></i>
                    </div>
                </a>
                <a class="github-link" href="https://github.com/OliLay/">
                    <div class="github" title="GitHub">
                        <i class="fa fa-github fa-4x"></i>
                    </div>
                </a>
                <a class="about-link" href="@Url.Action("Index", "About")">
                    <div class="about" title="About">
                        <i class="fa fa-user fa-4x"></i>
                    </div>
                </a>
            </div>

            <div class="content-box">
                <div class="content-header">
                        <i class="fa fa-angle-right fa-lg"></i>
                        <h3 class="content-heading">@ViewData["heading"].ToString()</h3>
                </div>

                <div class="content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>